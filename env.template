# ppop_promt Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# GitHub Token (repo scope required)
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo (Full control of private repositories)
GH_TOKEN=

# Code Signing Certificate Password
# If using self-signed certificate: ppop_promt_cert_password_2025
# If using commercial certificate: your actual password
CSC_KEY_PASSWORD=

# Optional: Debug mode (enables DevTools in production)
DEBUG=false

