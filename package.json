{
  "name": "ppop_promt",
  "productName": "ppop_promt",
  "version": "1.0.0",
  "description": "ppop_promt 프롬프트 관리 데스크탑 애플리케이션",
  "main": "electron.js",
  "author": "ppop_promt",
  "license": "MIT",
  "scripts": {
    "dev": "node_modules\\.bin\\electron.cmd .",
    "clean": "node clean.js",
    "build:backend": "python backend/build_backend.py",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "node -r dotenv/config node_modules/electron-builder/cli.js --publish=always",
    "build:electron:clean": "node -r dotenv/config node_modules/electron-builder/cli.js --publish=never --config.cache=null",
    "build:electron:unsigned": "node -r dotenv/config node_modules/electron-builder/cli.js --publish=always --config.win.sign=null",
    "build": "npm run clean && npm run build:backend && npm run build:frontend && npm run build:electron"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ppop_promt.app",
    "productName": "ppop_promt",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "electron.js",
      "preload.js",
      "frontend/dist/**/*",
      "public/**/*",
      "node_modules/**/*",
      "!backend",
      "!frontend/src",
      "!frontend/node_modules",
      "!frontend/public",
      "!frontend/package*.json",
      "!frontend/tsconfig*.json",
      "!frontend/vite.config.ts",
      "!frontend/index.html",
      "!run.py",
      "!clean.js",
      "!.git",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "asarUnpack": [
      "**/node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/ppop_promt_backend.exe",
        "to": "ppop_promt_backend.exe"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/logo.ico",
      "certificateFile": "certificate.pfx",
      "publisherName": "ppop_promt"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "heishia",
        "repo": "ppop_promt"
      }
    ]
  }
}
